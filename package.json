{
  "name": "playground",
  "version": "0.0.0",
  "private": true,
  "description": "Cimpress UI playground",
  "author": "Cimpress",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "postinstall": "cd playground && pnpm install",
    "dev": "pnpm run -r dev",
    "build": "pnpm run -r build",
    "preview": "pnpm run -r preview",
    "lint:check": "eslint .",
    "format:check": "prettier . --ignore-unknown --check",
    "types:check": "tsc -b",
    "clean:output": "rimraf --glob tsconfig*.tsbuildinfo playground/tsconfig*.tsbuildinfo"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.30.1",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-check-file": "^3.3.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-react-hooks": "6.0.0-rc.1",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-unicorn": "^59.0.1",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.36.0"
  },
  "engines": {
    "pnpm": ">=9.10.0"
  }
}
